:root {
    --nav-offset: 7.5rem;
    --orange: #FF9A3D;
    --cyan: #B3FFE5;
    --pink: #FF5887;
    --green: #08FF55;
}

@font-face {
    font-family: 'Archivo Black';
    src: url('/src/assets/fonts/ArchivoBlack-Regular.otf') format('opentype'),
        url('/src/assets/fonts/ArchivoBlack-Regular.ttf') format('truetype');
    font-weight: 900;
    font-style: normal;
}

* {
    color: #393939;
}

html {
    scroll-behavior: smooth;
}

body {
    margin: 0;
    background-color: var(--cyan);
}

h1 {
    font-family: 'Archivo Black', sans-serif;
    font-weight: 900;
    font-size: 2rem;
    justify-self: center;
}

h2 {
    font-family: 'Ibarra Real Nova';
    font-style: italic;
    font-weight: 400;
    font-size: 1.75rem;
    justify-self: center;
    padding-bottom: 0.9375rem;
}

p {
    font-family: 'Avenir';
    font-size: 1rem;
    line-height: 150%;
}

main {
    width: 100%;
    margin-top: 7rem;
    overflow-x: hidden;
}

.overflow {
    overflow-x: hidden;
}

article {
    margin-left: 1rem;
    margin-right: 1rem;
    margin-bottom: 8.75rem;

}

article p {
    min-width: 90%;
}

article,
[id] {
    scroll-margin-top: var(--nav-offset);
}

.titleflowercontainer {
    width: fit-content;
    justify-self: center;
}


.flowertitlepng {
    display: block;
    width: 3.5625rem;
    height: 3.625rem;
    justify-self: center;
}

/* nav */

nav {
    position: fixed;
    width: 100%;
    z-index: 10;
}

.navtop {
    margin-top: 1.5rem;
    position: absolute;
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: auto;
    z-index: 1;
}

.navbg {
    position: absolute;
    width: 100%;
    height: 6.25rem;
    z-index: -1;
}

.momulogo {
    padding-left: 1rem;
    width: 5.375rem;
    height: auto;
}

.hamburgermenubutton {
    padding-right: 2rem;
    width: 2.5rem;
    height: 1.9166rem;
}




.hamburgermenu {
    visibility: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    list-style: none;
    padding-top: 3rem;
    margin-top: -1em;
    justify-self: right;
    background: rgba(255, 166, 122, 0.70);
    width: 11.375rem;
    height: 26.25rem;
    border-radius: 0 0 0 1.25rem;
    z-index: 2;
}

.hamburgermenu li {
    font-family: 'Archivo Black', sans-serif;
    font-weight: 900;
    font-size: 1rem;
    text-decoration: underline;
}

.hamburgermenu li a:hover {
    color: var(--cyan);
}

/* Walter name header */

header {
    position: relative;
    overflow: hidden;
    width: 100%;
    z-index: -2;
    margin-bottom: 5rem;
}

.header-flowerfadetop {
    position: absolute;
    top: 5%;
    left: 80%;
    z-index: -2;
    width: 5.2408rem;
    height: 4.6765rem;
    transform: rotate(-11.023deg);
    aspect-ratio: 83.85/74.82;
}

@media (min-width:37.5em) {
    .header-flowerfadetop {
        position: absolute;
        top: 5%;
        left: 80%;
        z-index: -2;
        width: 6.2408rem;
        height: 5.6765rem;
        transform: rotate(-11.023deg);
        aspect-ratio: 83.85/74.82;
    }

    .Waltername{
        margin-left: 5rem;
    }
}

.header-flowerfademiddle {
    position: absolute;
    top: 5rem;
    left: 2rem;
    width: 4.2278rem;
    height: 3.7726rem;
    transform: rotate(-136.085deg);
    aspect-ratio: 67.64/60.36;
}

.header-bgmobile {
    position: absolute;
    top: 7rem;
    left: 0;
    width: 100%;
    height: 22.5rem;
    z-index: -3;
}

.Waltername {
    position: relative;
    z-index: -1;
    height: 12.3125rem;
}


.Waltername-Walter {
    position: absolute;
    bottom: 6rem;
    left: 1rem;
    color: #FF5887;
    font-family: 'Archivo Black', sans-serif;
    font-size: 4.375rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.Waltername-Van {
    position: absolute;
    top: 4rem;
    left: 7rem;
    color: var(--pink);
    font-family: 'Archivo Black', sans-serif;
    font-size: 3.875rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.Waltername-Beirendonck {
    position: absolute;
    top: 8rem;
    left: 1rem;
    color: var(--pink);
    font-family: 'Archivo Black', sans-serif;
    font-size: 3.125rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.header-choicebetween {
    margin-bottom: 1rem;
    justify-self: center;
    font-family: 'Ibarra Real Nova';
    font-style: italic;
    font-weight: 400;
    font-size: 1.75rem;
}

.header-commercialization {
    justify-self: center;
    font-family: 'Archivo Black', sans-serif;
    font-weight: 900;
    font-size: 2rem;
}

.mobilerotsymbol {
    display: block;
    justify-self: center;
}

/* --- Initial goal --- */

.initialgoal-waltervbpng,
.partnershipcontainer-designpng {
    display: block;
    justify-self: center;
    width: 9.375rem;
    height: 9.375rem;
    padding-top: 2.5rem;
}

.mustanglogo {
    display: block;
    justify-self: center;
    width: 18.125rem;
    height: 4.75rem;
    height: auto;
}

/* --- Walters themes --- */

.waltersthemescontainer .titleflowercontainer {
    justify-self: start;
}

.stretchcanvascontainer {
    padding-top: 1.5625rem;
    width: 14.6596rem;
    justify-self: center;
    margin-bottom: 25rem;
}

.stretchcanvas {
    position: relative;
    display: flex;
    flex-direction: column;
    border: 0.125rem solid var(--green);
    padding: 1.25rem;
    height: 13.125rem;
    overflow: hidden;
    align-items: center;
}



.imagebackgroundshape {
    z-index: -1;
    position: relative;
    width: 10.1961rem;
    height: 11.2126rem;
}

.stretchcanvas-img {
    width: 10.1961rem;
    height: 11.2126rem;
    padding-bottom: 5rem;
    user-select: none;
    -webkit-user-drag: none;
    pointer-events: none;
}

.stretchcanvas-dragger {
    width: 4.9534rem;
    height: 1.0625rem;
    transform: rotate(90deg);
    display: block;
    justify-self: center;
}

.stretchcanvas-dragger:hover {
    cursor: ns-resize;
}


.stretchpath {
    position: absolute;
    z-index: -1;
    display: block;
    justify-self: center;
}

/* --- Break-up section --- */
.breakupcontainer-swoop {
    display: block;
    width: 16.4996rem;
    height: 2.5219rem;
    justify-self: center;
}

.breakupimgcontainer {
    display: flex;
    padding: 0 1.25rem;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
    padding-top: 1.875rem;
    padding-bottom: 1.875rem;
}

.breakupimgcontainer img {
    width: 6.25rem;
    height: 8.6875rem;
}

.breakup-decision {
    padding-top: 1.875rem;
    text-align: center;
    justify-self: center;
    width: 18.75rem;
}

.zipperplaceholder {
    position: relative;
    top: -30rem;
    display: block;
    width: 100%;
}

.startingfrom0container {
    margin-top: -25rem;
    margin-bottom: 10rem;
    justify-self: center;
}

.startingfrom0title {
    padding-bottom: 1.25rem;
}

.startingfrom0title-0 {
    font-size: 4rem;
}

.startingfrom0-outro {
    padding-top: 3.125rem;
}

.startingfrom0-outro p {
    padding-bottom: 1rem;
}

.startingfrom0-outro p+p {
    font-weight: 800;
}

/* --- Speak his words section --- */



.recordbutton {
    position: relative;
    top: 6rem;
    display: block;
    width: 4.5rem;
    height: 5.125rem;
    justify-self: center;
}

.words {
    position: relative;
    width: 21.875rem;
    height: 15.625rem;
    justify-self: center;
}

.words p {
    position: absolute;
    min-width: 10%;
    max-width: 50%;
    text-align: center;
}

.fashion {
    top: 7rem;
    left: 13rem;
}

.norules {
    top: -3rem;
    left: 7rem;
}

.truth {
    left: 14rem;
}

.stopthinking {
    top: 7rem;
    right: 13rem;
}

.freedom {
    left: -1rem;
}

/* --- New style --- */
.newstyle-bg {
    position: absolute;
    top: -4rem;
    left: -45rem;

    z-index: -3;
}

.newstylecontainer .titleflowercontainer {
    justify-self: start;
}

.newstylecontainer {
    position: relative;
}

.stretchsilhouette {
    width: 16.818rem;
    user-select: none;
    -webkit-user-drag: none;
    pointer-events: none;
}

.stretchhat {
    width: 5.1173rem;
    transform-origin: center;
}

.stretchdress {
    width: 8.6771rem;
    transform-origin: center;
}

.sizer {
    width: 3.4712rem;
    cursor: nwse-resize;
}

.sizedhat {
    position: absolute;
    top: 1rem;
    left: 3.5rem;
}

.sizedress {
    position: absolute;
    top: 2rem;
    left: -1.5rem;
}

.stretchdress,
.stretchhat {
    user-select: none;
    -webkit-user-drag: none;
    pointer-events: none;
}


.hatcontainer {
    position: relative;
    top: -20.5rem;
    left: 6rem;
    width: 6.9656rem;
    transform-origin: center;
}

.dresscontainer {
    position: relative;
    top: -18rem;
    left: 4rem;
    width: 10.4063rem;
    transform-origin: center;
}

.stretchcontainer {
    position: relative;
    padding-top: 5rem;
    justify-self: center;
}

/* --- The Goal --- */
.thegoalcontainer p {
    padding-bottom: 3.125rem;
}

/* --- Caroussel --- */
.carousselloop {
    position: relative;
    display: flex;
    flex-direction: row;
    margin-left: 27%;
    width: 10rem;
    overflow-x: hidden;
}


.carousselcontainer {
    position: relative;
}

.carousselimgcontainer {
    display: flex;
    flex-direction: row;
}

.carousselimg {
    position: relative;
    width: 10rem;
    overflow: hidden;
    margin-right: 2.5rem;
}

.carousselimg p {
    position: absolute;
    text-align: center;
    width: 7.875rem;
    top: 10.8rem;
    left: 10%;
    color: white;
}

.carousselcontainer-bg {
    position: absolute;
    top: -1rem;
    display: block;
    width: 57.375rem;
    justify-self: center;
}

.caroussel-prevbutton {
    position: absolute;
    top: 4rem;
}

.caroussel-prevbutton:hover,
.caroussel-nextbutton:hover {
    scale: 1.1;
}

.caroussel-nextbutton {
    position: absolute;
    right: 0;
    top: 4rem
}


/* --- Want more? --- */
.bookticketscontainer {
    padding-top: 2rem;
    position: relative;
}

.bookticketscontainer:hover p {
    color: var(--cyan);
}

.bookticketscontainer p {
    position: absolute;
    top: 40%;
    left: 12%;
    width: 5.625rem;
    min-width: 10%;
    font-weight: 800;
    text-decoration: underline;
    text-align: center;
}

.booktickets {
    padding-top: 1rem;
    font-weight: 800;
}

.MoMulink {
    padding-top: 2.8125rem;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.MoMuLogo {
    width: 5.8125rem;
}

.booktickets-button {
    width: 8.3031rem;
}

/* --- Footer --- */
footer {
    position: relative;
}

.footer_mobile {
    position: absolute;
    display: block;
    justify-self: center;
    width: 100%;
    height: 37.5rem;
    z-index: -1;
}

.otherstoriescontainer {
    padding-top: 3.5rem;
    padding-bottom: 3.75rem;
}

.timegrid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    grid-template-rows: repeat(3, 1fr);
    gap: 1.25rem;
    width: 80%;
    justify-self: center;


}

.timegrid_1,
.timegrid_2,
.timegrid_3,
.timegrid_4,
.timegrid_5 {
    justify-self: center;
    font-weight: 900;
    text-decoration: underline;
    color: var(--cyan);
    font-size: 1.375rem;
}

.timegrid_1 {
    grid-column: 1;
    grid-row: 1;
}

.timegrid_2 {
    grid-column: 3;
    grid-row: 1;
}

.timegrid_3 {
    grid-column: 1;
    grid-row: 2;
}

.timegrid_4 {
    grid-column: 3;
    grid-row: 2;
}

.timegrid_5 {
    grid-column: span 3;
    grid-row: 3;
}

.socialslist {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 80%;
    justify-self: center;
    padding-top: 1.875rem;
}

.footeraddress {
    text-align: center;
    font-weight: 800;
    width: 80%;
    justify-self: center;
    padding-top: 5rem;
}